<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bayangan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Warna bayangan -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Kotak Utama -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna isi kotak -->
            <stroke android:width="1dp" android:color="#D1D1D1" /> <!-- Outline kotak -->
            <corners android:radius="16dp" /> <!-- Sudut membulat -->
        </shape>
    </item>
</layer-list>
