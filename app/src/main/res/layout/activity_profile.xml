<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Tombol back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:contentDescription="Kembali" />

    <!-- Judul -->
    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Pengguna"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/btnBack" />

    <!-- Foto Profil -->
    <ImageView
        android:id="@+id/fotoProfil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/foto_profil"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/judul"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_circle"
        android:scaleType="centerCrop" />

    <!-- Ikon edit di foto -->
    <ImageView
        android:id="@+id/ikonEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_edit"
        android:layout_alignEnd="@id/fotoProfil"
        android:layout_alignBottom="@id/fotoProfil"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp" />

    <!-- Nama -->
    <TextView
        android:id="@+id/labelNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/fotoProfil"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="8dp" />

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Putri Aqila Shaveena"
        android:textColor="#CCCCCC"
        android:layout_below="@id/labelNama"
        android:layout_marginHorizontal="8dp" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888"
        android:layout_below="@id/txtNama"
        android:layout_marginBottom="16dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/line1"
        android:layout_marginHorizontal="8dp" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Putriaqila.shaveena@gmail.com"
        android:textColor="#CCCCCC"
        android:layout_below="@id/labelEmail"
        android:layout_marginHorizontal="8dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888"
        android:layout_below="@id/txtEmail"
        android:layout_marginBottom="16dp" />

    <!-- Nomor Telepon -->
    <TextView
        android:id="@+id/labelTelepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/line2"
        android:layout_marginHorizontal="8dp" />

    <TextView
        android:id="@+id/txtTelepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+62 812 3456 7891"
        android:textColor="#CCCCCC"
        android:layout_below="@id/labelTelepon"
        android:layout_marginHorizontal="8dp" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888"
        android:layout_below="@id/txtTelepon"
        android:layout_marginBottom="16dp" />

    <!-- Tanggal Lahir -->
    <TextView
        android:id="@+id/labelTglLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/line3"
        android:layout_marginHorizontal="8dp" />

    <RelativeLayout
        android:id="@+id/containerTglLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelTglLahir"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/txtTglLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 - 03 - 1993"
            android:textColor="#CCCCCC" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/kalender"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888"
        android:layout_below="@id/containerTglLahir"
        android:layout_marginBottom="24dp" />

    <!-- Tombol Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_gradientbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="8dp" />

</RelativeLayout>
