<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon Notifikasi -->
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/notifikasi"
            android:contentDescription="Icon Notifikasi"
            android:layout_marginEnd="12dp"
            app:tint="#133568" />

        <!-- Detail Notifikasi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_notif_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Notifikasi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_notif_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi notifikasi"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Waktu Notifikasi -->
        <TextView
            android:id="@+id/tv_notif_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="12sp"
            android:textColor="#888888" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
